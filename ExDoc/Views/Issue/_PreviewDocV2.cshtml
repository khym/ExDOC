@model ExDoc.ViewModel.DocDetail_V2

<link href="~/Content/PreviewDoc.css" rel="stylesheet" />


<div>

    <div class="card  shadow-2">

        <div class="tabbable-panel">
            <div class="tabbable-line">
                <ul class="nav nav-tabs ">
                    <li class="active">
                        <a href="#tab_default_1" data-toggle="tab">Document Information </a>
                    </li>
                    <li onclick="get_tap2('@Model.issue_no')">
                        <a href="#tab_default_2" data-toggle="tab">Document File </a>
                    </li>
                    <li onclick="get_tap3('@Model.issue_no')">
                        <a href="#tab_default_3" data-toggle="tab">Transaction Detail </a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="tab_default_1">
                        <div class="doc_name">
                            <h3>Document Name : @Model.doc_name</h3>

                        </div>
                        <div class="type Secondary-text">Document Type : @Model.doc_type</div>

                        <div class="information_doc">

                            <div class="Secondary-text title">Document Number</div>
                            <div class="doc_rev data-text">@Model.doc_no</div>

                            <div class="Secondary-text title">Document Revision</div>
                            <div class="doc_rev data-text">@Model.doc_rev</div>

                            <div class="Secondary-text title">Receive date doc. from customer</div>
                            <div class="doc_rev data-text">@Model.rec_date</div>

                            <div class="Secondary-text title">TNC Product</div>
                            <div class="doc_rev data-text">@Model.tnc_product</div>

                            @if (@Model.change_point != null)
                            {
                                <div class="Secondary-text title">Change Point</div>
                                <p>@Model.change_point</p>
                            }

                            @if(Model.doc_type_id < 3){
                        
                                <div class="Secondary-text title">Group Review</div>
                                 <div class="doc_rev data-text">
                                @foreach (var item in @Model.cust_name)
                                {
                                  @item @ViewBag.commar
                                }
                                </div>

   
                            }
                        </div>
                    </div>
                    <div class="tab-pane" id="tab_default_2">
                        <div id="tab2">
                            <div class="load-center">
                                <div class="loader"></div>
                            </div>
                        </div>


                    </div>
                    <div class="tab-pane" id="tab_default_3">
                        <div id="tab3">
                            <div class="load-center">
                                <div class="loader"></div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>


       
       
            @if(Model.check_tran){
                
           <div class="card-footer">  @Html.Action("_FooterPreviewDoc", "Issue", new { issue_no = @Model.issue_no })   </div>

                }
        

    </div>
</div>




<script>


    function get_tap2(dd) {
        var remote = "@Url.Action("_CustomerAndFileV2")?issue_no=" + dd;
        $.get(remote, function (data) {
            $("#tab2").html(data);

        });
    }

    function get_tap3(dd) {
        var remote = "@Url.Action("_TransactionDetail")?issue_no=" + dd;
        $.get(remote, function (data) {
            $("#tab3").html(data);

        });
    }

</script>
